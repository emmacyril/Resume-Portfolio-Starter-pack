{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "build" }
    },
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    { "src": "/api/(.*)", "dest": "/api/$1" },
    { "src": "^/static/(.*)", "dest": "/static/$1" },
    { "src": "^/(.*).(js|css|json|ico|png|txt|svg|jpg|jpeg|gif|eot|ttf|woff|woff2)$", "dest": "/$1.$2" },
    { "src": ".*", "dest": "/index.html" }
  ],
  "functions": {
    "api/*.php": {
      "runtime": "vercel-php@0.7.1"
    }
  }
}